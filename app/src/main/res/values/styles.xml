<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_flag_02">
        <item name="android:textSize">10dp</item>
        <item name="android:background">@drawable/flag_02</item>
    </style>

    <style name="text_flag_03">
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/flag_03</item>
    </style>

    <style name="text_flag_04">
        <item name="android:textSize">10dp</item>
        <item name="android:background">@drawable/flag_04</item>
    </style>

    <style name="text_flag_01">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/flag_01</item>
    </style>

    <style name="text_flag_05">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/flag_05</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="LoadingDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
